{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "General Concept Schema",
  "description": "",
  "type": "object",
  "properties": {
    "version": {"type": "string"},
    "author": {"type": "string"},
    "createdOn": {"type": "string"},
    "accordingTo": {"type": "string"},
    "id": {"type": "string"},
    "priority": {"type": "string"},
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "desc": {"type": "string"},
    "field": {"type": "string"},
    "pre": {
      "type": "array",
      "description": "short for prerequisites",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "related": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "refs": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "parents": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "children": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "concept": {"type": "string"},
    "definition": {"type": "string"},
    "translations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "transLang": {"type": "string"},
          "transText": {"type": "string"}
        },
        "required": ["transLang", "transText"],
        "additionalProperties": false
      },
      "uniqueItems": true
    }
  },
  "required": ["id", "concept", "definition"],
  "additionalProperties": false
}